/**index.wxss**/
.container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
}

.product_item{
  width: 50%;
  background-color: #f4f4f4;
}

.product_item_content{
  display: flex;
  flex-direction: column;
  margin: 4px;
  background-color: white;
  padding: 8px;
}

.product_item_image{
  width: 100%;
  height: 8rem;
}

.product_item_title{
   font-size: 14px;
   margin-top: 0.5rem;
   margin-bottom: 0.5rem;
   line-height: 16px;
   color: #353535;
}

.product_item_price{
   font-size: 16px;
   color: #e64340;
}

.slide-image{
  width: 100%;
}